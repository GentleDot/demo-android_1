<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.gentledot.helloandroid">

    <uses-permission android:name="android.permission.RECEIVE_SMS"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity">
        </activity>
        <activity android:name=".sampleConstraint">
        </activity>
        <activity android:name=".Scroll">
        </activity>
        <activity android:name=".FrameActivity">
        </activity>
        <activity android:name=".SmsActivity">
        </activity>
        <activity android:name=".InflationActivity">
        </activity>
        <activity
                android:name=".MenuPageActivity"
                android:label="메뉴 액티비티"
                android:theme="@style/Theme.AppCompat.Dialog">
        </activity>
        <activity android:name=".ParcelActivity">
        </activity>

        <service
                android:name=".MyService"
                android:enabled="true"
                android:exported="true">
        </service>

        <receiver
                android:name=".SMSReceiver"
                android:enabled="true"
                android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>

        <activity android:name=".SMSReceiveActivity">
        </activity>
    </application>

</manifest>
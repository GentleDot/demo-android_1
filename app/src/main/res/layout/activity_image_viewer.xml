<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_image_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="net.gentledot.helloandroid.ImageViewer">
    <fragment android:layout_width="match_parent" android:layout_height="match_parent"
              android:layout_weight="1" android:name="net.gentledot.helloandroid.fragment.ListFragment"
              android:id="@+id/listFragment"/>

    <fragment android:layout_width="match_parent" android:layout_height="match_parent"
              android:layout_weight="1" android:name="net.gentledot.helloandroid.fragment.ImageViewerFragment"
              android:id="@+id/imageViewerFragment"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_receive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="net.gentledot.helloandroid.SMSReceiveActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/smsSender" android:hint="발신번호"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/smsReceivedDate"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/smsContent" android:hint="수신일자"/>
    <EditText
            android:layout_width="344dp"
            android:layout_height="249dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/smsContent"
            app:layout_constraintLeft_toLeftOf="@+id/smsSender"
            android:layout_marginEnd="16dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" android:hint="내용" android:layout_marginTop="40dp" android:gravity="top"
            app:layout_constraintTop_toBottomOf="@+id/smsSender" app:layout_constraintHorizontal_bias="0.25"/>
    <Button
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/smsConfirm"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="16dp"/>
</android.support.constraint.ConstraintLayout>

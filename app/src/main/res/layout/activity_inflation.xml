<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_inflation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="net.gentledot.helloandroid.InflationActivity">

    <TextView android:id="@+id/textView" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="버튼을 눌러 부분 화면을 추가"
    android:textSize="20dp"/>

    <Button android:id="@+id/addButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="추가하기"
    android:layout_gravity="center_horizontal"/>

    <LinearLayout android:id="@+id/contentBox"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

    </LinearLayout>

</LinearLayout>

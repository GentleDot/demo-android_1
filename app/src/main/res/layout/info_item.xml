<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView android:layout_width="80dp" android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="이름"
                  android:id="@+id/nameTextView"
            android:textSize="20sp" android:textColor="@color/colorPrimaryDark"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="전화번호"
                  android:id="@+id/telTextView"
                  android:layout_marginTop="5dp"
            android:textSize="12sp" android:textColor="@android:color/holo_blue_light"/>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="net.gentledot.helloandroid.MainActivity">

    <Button
            android:text="사각형"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drawBtn" android:layout_marginTop="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginStart="8dp"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/drawableVarBtn"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toRightOf="@+id/drawBtn"
        android:layout_marginTop="8dp"
        android:text="drawable"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/bitmapDemoBtn"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toRightOf="@+id/drawableVarBtn"
        android:layout_marginTop="8dp"
        android:text="비트맵"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/paintBoardBtn"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toRightOf="@+id/bitmapDemoBtn"
        android:text="페인트보드"
        android:layout_marginTop="8dp"/>
    <Button
            android:text="서피스 뷰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surfaceViewBtn"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/drawBtn"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/coverFlowBtn"
            android:text="커버플로우"
            app:layout_constraintTop_toBottomOf="@+id/drawableVarBtn" app:layout_constraintLeft_toRightOf="@+id/surfaceViewBtn"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>
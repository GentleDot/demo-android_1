<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="net.gentledot.helloandroid.MainActivity">

    <Button
            android:text="터치 / 포커스 이벤트"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="16dp"/>
    <Button
            android:text="방향 전환 이벤트"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_marginEnd="16dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="16dp"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/toastXPos" android:inputType="number"/>
        <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/toastYPos" android:inputType="number"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/toastConf" android:text="띄우기"
        android:textSize="20sp"/>
        <Button
                android:text="다른토스트"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/changeToast" android:layout_weight="1"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/snackMaker" android:text="스낵바"/>

    </LinearLayout>
    <Button
            android:text="프로그래스바"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="16dp"
    />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="352dp"
            android:layout_height="60dp"
            android:id="@+id/linearLayout2" android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintHorizontal_bias="0.33">

        <TextView android:id="@+id/dialogText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:text="버튼을 누르면 대화상자가 뜹니다."/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/dialogButton" android:text="띄우기" android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <Button
            android:text="간단한 애니메이션"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simpleAniBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/progressBtn" android:layout_marginLeft="16dp"/>
    <Button
            android:text="슬라이딩"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slidingBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintTop_toTopOf="@+id/simpleAniBtn"
            android:layout_marginStart="16dp" app:layout_constraintLeft_toRightOf="@+id/simpleAniBtn"
            android:layout_marginLeft="16dp"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="16dp"/>
    <Button
            android:text="프래그먼트"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentBtn" android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toTopOf="@+id/progressBtn" android:layout_marginBottom="8dp"/>
    <Button
            android:text="이미지뷰어"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewerBtn" android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/fragmentBtn" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toTopOf="@+id/simpleAniBtn" android:layout_marginBottom="8dp"/>
    <Button
            android:text="옵션 메뉴"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionMenuBtn"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageViewerBtn" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toTopOf="@+id/simpleAniBtn" android:layout_marginBottom="8dp"/>
    <Button
            android:text="탭"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tabPageBtn"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/optionMenuBtn" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toTopOf="@+id/slidingBtn" android:layout_marginBottom="8dp"/>
    <Button
            android:text="웹뷰 위젯"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/webViewBtn"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintBottom_toTopOf="@+id/fragmentBtn"
            android:layout_marginBottom="8dp"/>
    <Button
            android:text="비트맵 버튼"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bitmapBtn"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/webViewBtn" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageViewerBtn"
            android:layout_marginBottom="8dp"/>
    <Button
            android:text="리스트뷰1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewBtn1"
            app:layout_constraintLeft_toRightOf="@+id/bitmapBtn"
            app:layout_constraintBottom_toTopOf="@+id/optionMenuBtn" android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <Button
            android:text="Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerBtn"
            app:layout_constraintBottom_toTopOf="@+id/tabPageBtn"
            app:layout_constraintLeft_toRightOf="@+id/listViewBtn1"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="그리드뷰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridViewBtn"
            app:layout_constraintBottom_toTopOf="@+id/webViewBtn" android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"/>
</android.support.constraint.ConstraintLayout>

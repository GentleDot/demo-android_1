<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="net.gentledot.helloandroid.MainActivity">

    <Button
            android:text="네이버 접속"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="onButton1Clicked (MainActivity)"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:text="전화걸기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp"
            android:onClick="onButton2Clicked" android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button" android:layout_toEndOf="@+id/button"/>
    <Button
            android:text="새 화면 띄우기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button2" android:layout_toEndOf="@+id/button2"
            android:layout_marginLeft="19dp" android:layout_marginStart="19dp" android:id="@+id/button4"
            android:onClick="onButton3Clicked"/>
    <Button
            android:text="스크롤 뷰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" android:id="@+id/buttonScroll"
            android:onClick="onButtonScrClicked" android:layout_below="@+id/button"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <Button
            android:text="프레임 뷰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFrame"
            android:onClick="onButtonFraClicked" android:layout_alignBaseline="@+id/buttonScroll"
            android:layout_alignBottom="@+id/buttonScroll" android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"/>
    <Button
            android:text="SMS 입력화면"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSms"
            android:layout_alignBaseline="@+id/buttonFrame" android:layout_alignBottom="@+id/buttonFrame"
            android:layout_alignLeft="@+id/button4" android:layout_alignStart="@+id/button4"
            android:onClick="onButtonSmsClicked"/>
    <Button
            android:text="인플레이션 데모"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/button15" android:layout_below="@+id/buttonScroll" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:onClick="onButtonInflClicked"/>
    <Button
            android:text="메뉴화면 띄우기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goToMenu"
            android:layout_alignBaseline="@+id/button15" android:layout_alignBottom="@+id/button15"
            android:layout_alignRight="@+id/button4" android:layout_alignEnd="@+id/button4"
    android:onClick="onToMenuClicked"/>
    <Button
            android:text="Parcel 화면 띄우기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:id="@+id/onParcelButton"
            android:layout_below="@+id/button15" android:layout_alignRight="@+id/buttonScroll"
            android:layout_alignEnd="@+id/buttonScroll" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="소시지빵점"
            android:ems="10"
            android:layout_alignTop="@+id/serviceBtn" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="11dp" android:layout_marginStart="11dp"
            android:id="@+id/serviceTxt"/>
    <Button
            android:text="서비스 시작"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/serviceBtn"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/onParcelButton" android:layout_alignRight="@+id/goToMenu"
            android:layout_alignEnd="@+id/goToMenu"/>
    <Button
            android:text="SMS 리시버"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/smsReceiverBtn" android:layout_alignTop="@+id/onParcelButton"
            android:layout_toRightOf="@+id/serviceTxt" android:layout_toEndOf="@+id/serviceTxt"
            android:onClick="onToSmsReceiver"/>
</RelativeLayout>

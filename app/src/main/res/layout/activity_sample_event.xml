<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_sample_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="net.gentledot.helloandroid.SampleEvent">


    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:background="#ff00ffff"
          android:id="@+id/view1"/>
    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:background="#ffffAA00"
          android:id="@+id/view2" />
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:id="@+id/scrollView1">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/textView1"/>
    </ScrollView>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:orientation="vertical" android:layout_weight="1">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:focusable="true"
            android:textSize="20dp"
            android:background="#ff00ff44"/>

        <EditText android:layout_width="match_parent" android:layout_height="60dp"
            android:id="@+id/editText1"
            android:hint="텍스트를 입력하세요."
            android:textSize="20dp"
                  android:background="@drawable/my_selector"
            />

        <Button android:layout_width="160dp" android:layout_height="wrap_content"
            android:id="@+id/showButton"
            android:text="보여주기"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


</LinearLayout>
